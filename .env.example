# Server Configuration
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/designtokens

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# OnKernel API Key
KERNEL_API_KEY=

# LLM Configuration
LLM_PROVIDER=openai              # 'openai' or 'ollama'
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Browser Configuration
BROWSER_TYPE=chromium            # 'chromium', 'firefox', 'webkit', 'random'
ROTATE_BROWSERS=false
ROTATE_USER_AGENTS=true

# ============================================
# BROWSER OPTIMIZATION SETTINGS (NEW)
# ============================================

# Browser Performance
BROWSER_HEADLESS=true              # Set to 'false' for debugging with visible browser
BLOCK_RESOURCES=true               # Block images, fonts, media for faster loading
USE_ONKERNEL=true                  # Use OnKernel remote browsers when available
MAX_BROWSER_INSTANCES=3            # Maximum concurrent browser instances
MAX_CONTEXTS_PER_BROWSER=5         # Maximum contexts per browser instance
SESSION_TIMEOUT_MS=300000          # Browser session timeout (5 minutes)
PAGE_TIMEOUT_MS=30000              # Page operation timeout
NAVIGATION_TIMEOUT_MS=60000        # Navigation timeout
INTERCEPT_REQUESTS=false           # Set to 'true' to log large requests for debugging

# Proxy Configuration (Optional)
# PROXY_URL=http://proxy.example.com:8080

# Parallel Execution
PARALLEL_STEPS=true                # Enable parallel execution of independent steps
MAX_PARALLEL_JOBS=2                # Maximum parallel extraction jobs

# Retry Configuration
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Lazy Load Configuration
HANDLE_LAZY_LOAD=true
SCROLL_STEPS=3
SCROLL_DELAY_MS=500

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Crawler Settings
MAX_CRAWL_DEPTH=3
REQUEST_TIMEOUT_MS=60000
MAX_CONCURRENT_REQUESTS=5

# Cache Settings
CACHE_TTL_SECONDS=3600